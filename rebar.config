%% -*- erlang -*-

{erl_opts, [debug_info, warn_untyped_record, warnings_as_errors]}.

{cover_export_enabled, true}.
{cover_enabled, true}.
{cover_opts, [verbose]}.

{deps, [
        {erlang_pbc, ".*", {git, "https://github.com/helium/erlang_pbc.git", {branch, "master"}}}
       ]}.

{plugins, [
           {rebar3_eqc, "1.3.0"},
           covertool
          ]}.

{dialyzer, [
            {warnings, [unknown]},
            {plt_apps, all_deps}
           ]}.
