{erl_opts, [debug_info, warn_untyped_record, warnings_as_errors]}.

{cover_enabled, true}.
{deps, [
        {erlang_pbc, ".*", {git, "https://github.com/helium/erlang_pbc.git", {branch, "master"}}}
       ]}.

{plugins, [
           {rebar3_eqc, {git, "https://github.com/Vagabond/rebar3-eqc-plugin", {branch, "master"}}}
    ]}.

{dialyzer, [
            {warnings, [unknown]},
            {plt_apps, all_deps}
           ]}.
